    imageSrc: "/assets/img/nav-01.jpg",
    imageAlt: "Ductless Mini-Splits",
  },
  {
    text: "Heat Pumps",
    url: "/heating/heat-pumps/",
    imageSrc: "/assets/img/nav-02.jpg",
    imageAlt: "Heat Pumps",
  },
  {
    text: "Furnaces",
    url: "/heating/furnaces/",
    imageSrc: "/assets/img/nav-03.jpg",
    imageAlt: "Furnaces",
  },
  {
    text: "Boilers",
    url: "/heating/boilers/",
    imageSrc: "/assets/img/nav-04.jpg",
    imageAlt: "Boilers",
  },
];
const setTwoLinks = [
  {
    text: "Ductless Mini-Splits",
    url: "/air-conditioning/ductless-mini-splits/",
    imageSrc: "/assets/img/nav-01.jpg",
    imageAlt: "Ductless Mini-Splits",
  },
  {
    text: "Central AC",
    url: "/air-conditioning/central-air-conditioners/",
    imageSrc: "/assets/img/nav-05.jpg",
    imageAlt: "Central AC",
  },
  {
    text: "Furnaces",
    url: "/heating/furnaces/",
    imageSrc: "/assets/img/nav-03.jpg",
    imageAlt: "Furnaces",
  },
  {
    text: "Heat Pumps",
    url: "/heating/heat-pumps/",
    imageSrc: "/assets/img/nav-02.jpg",
    imageAlt: "Heat Pumps",
  },
];
const setThreeLinks = [
  {
    text: "Customer Reviews",
    url: "/customer-reviews/",
    imageSrc: "/assets/img/nav-07.jpg",
    imageAlt: "Cutomer Reviews",
  },
  {
    text: "Service Area",
    url: "/service-area/",
    imageSrc: "/assets/img/nav-08.jpg",
    imageAlt: "Service Area",
  },
  {
    text: "About Us",
    url: "/about-us/",
    imageSrc: "/assets/img/nav-09.jpg",
    imageAlt: "About Us",
  },
  {
    text: "Blog",
    url: "/blog/",
    imageSrc: "/assets/img/nav-10.jpg",
    imageAlt: "Blog",
