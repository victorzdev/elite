---
export interface HeroProps {
  header: {
    title: string;
    subtitle: string;
    content: string;
  };
  image: {
    src: string;
    alt: string;
  };
  primaryCta: { href: string; text: string };
  secondaryCta: { href: string; text: string };
}

const { header, image, primaryCta, secondaryCta } =
  Astro.props as HeroProps;
---

<div class="relative isolate overflow-hidden px-6 py-12 lg:py-4">
  <img
    class="absolute -z-10 inset-0 w-full h-full object-cover"
    src={image.src}
    alt={image.alt}
  />
  <div class="absolute -z-10 inset-0 bg-gray-900 opacity-60"></div>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-18 sm:py-32">
    <div class="max-w-2xl">
      <h1 class="text-4xl font-light tracking-tight text-white sm:text-5xl">
        <span class="tracking-wide">{header.subtitle}</span>
        <br />
        <span class="font-bold"
          >{header.title}</span
        >
      </h1>
      <p class="mt-4 text-xl leading-8 text-white">
        {header.content}
      </p>
      <div class="mt-4 flex flex-col items-start justify-normal gap-y-2 w-fit">
        <a
          href={primaryCta.href}
          class="rounded-md bg-blue-500 px-4 py-3 text-sm font-bold text-white hover:bg-blue-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-400 w-full"
          >{primaryCta.text}</a
        >
        <a
          href={secondaryCta.href}
          class="rounded-md border border-white px-4 py-3 text-sm font-bold text-white hover:bg-white hover:text-gray-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-400 w-full"
          >{secondaryCta.text}</a
        >
      </div>
    </div>
  </div>
</div>
