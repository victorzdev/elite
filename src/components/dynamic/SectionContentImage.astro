---
export interface ContentImageProps {
  header: {
    title: string;
    subtitle: string;
    content: string;
  };
  image: {
    src: string;
    alt: string;
  };
  primaryCta: { href: string; text: string };
  secondaryCta: { href: string; text: string };
  review: {
    name: string;
    city: string;
    content: string;
  };
}

const { header, image, primaryCta, secondaryCta, review } =
  Astro.props as ContentImageProps;
---

<section
  class="mx-auto max-w-7xl overflow-hidden bg-white px-6 lg:px-8 py-8 sm:py-8">
  <div
    class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:items-start">
    <div class="lg:pt-4 lg:max-w-xl justify-self-start">
      <h2
        class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        {header.title}
      </h2>
      <p class="mt-6 text-base leading-7 text-gray-700">
        {header.content}
      </p>
      <div class="mt-8">
        <a
          href={primaryCta.href}
          class="inline-flex rounded-md bg-blue-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500"
          >{primaryCta.text}</a
        >
      </div>
      <!-- SINGLE REVIEW -->
      <figure class="mt-12 text-gray-700">
        <blockquote class="text-sm">
          <p>
            "{review.content}"
          </p>
        </blockquote>
        <figcaption class="mt-2 flex flex-col gap-x-4 text-sm leading-6">
          <p class="sr-only">5 out of 5 stars</p>
          <div class="mt-1 mb-1 flex gap-x-1 text-yellow-400">
            <svg
              class="h-5 w-5 flex-none"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z"
                clip-rule="evenodd"></path>
            </svg>
            <svg
              class="h-5 w-5 flex-none"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z"
                clip-rule="evenodd"></path>
            </svg>
            <svg
              class="h-5 w-5 flex-none"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z"
                clip-rule="evenodd"></path>
            </svg>
            <svg
              class="h-5 w-5 flex-none"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z"
                clip-rule="evenodd"></path>
            </svg>
            <svg
              class="h-5 w-5 flex-none"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <div>
            <span class="font-semibold text-gray-900">{review.name}</span> | {
              review.city
            }
          </div>
        </figcaption>
      </figure>
    </div>
    <div class="lg:pt-4 lg:max-w-xl h-full md:h-[550px] justify-self-end">
      <img
        src={image.src}
        alt={image.alt}
        width=""
        height=""
        class="md:rounded-br-xl object-cover h-full"
      />
    </div>
  </div>
</section>
